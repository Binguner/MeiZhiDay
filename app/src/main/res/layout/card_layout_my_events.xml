<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_event_card_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:elevation="10dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_layout_my_event_circleimageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/bg2"/>
        <TextView
            android:id="@+id/card_layout_my_event_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenguou"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/card_layout_my_event_circleimageView"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
